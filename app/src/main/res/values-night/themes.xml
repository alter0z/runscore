<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Runscore" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bgLight</item>
        <item name="colorPrimaryVariant">@color/bgLight</item>
        <item name="colorOnPrimary">@color/bgLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bgDark</item>
        <item name="colorSecondaryVariant">@color/bgDark</item>
        <item name="colorOnSecondary">@color/bgDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/transitionAnimation</item>
    </style>

    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="transitionAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ProgressTheme">
        <item name="colorAccent">@color/bgDark</item>
    </style>

    <style name="Theme.Runscore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Runscore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Runscore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>